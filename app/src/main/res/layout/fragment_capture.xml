<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SmartDoorModule.CaptureFragment"
        android:background="@drawable/gradient_doorbackground">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="373dp"
            android:layout_height="346dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_doorsection"
            android:elevation="3dp"
            android:padding="15dp"
            android:scaleType="fitStart"
            android:text="CAPTURE AGAIN"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnAlert"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_dooralert"
            android:elevation="3dp"
            android:padding="15dp"
            android:scaleType="fitStart"
            android:text="ALERT"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCapture" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>