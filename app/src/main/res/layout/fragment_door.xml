<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SmartDoorModule.DoorFragment"
        android:background="@drawable/gradient_doorbackground">

        <TextView
            android:id="@+id/txtDoorStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:text="DOOR UNLOCKED"
            android:textColor="#129B19"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnDoor"
            android:layout_width="201dp"
            android:layout_height="200dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_button_green"
            android:padding="50dp"
            android:elevation="3dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDoorStatus"
            app:srcCompat="@drawable/door_unlock"/>


        <Button
            android:id="@+id/btnCapture"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_doorsection"
            android:elevation="3dp"
            android:padding="15dp"
            android:scaleType="fitStart"
            android:text="CAPTURE"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDoor" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_doorhistory"
            android:elevation="3dp"
            android:padding="12dp"
            android:scaleType="fitStart"
            android:text="HISTORY"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCapture" />

        <Button
            android:id="@+id/btnAlert"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_dooralert"
            android:elevation="3dp"
            android:padding="15dp"
            android:scaleType="fitStart"
            android:text="ALERT"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnHistory" />

        <ImageButton
            android:id="@+id/btnScene"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_button_green"
            android:elevation="3dp"
            android:padding="1dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_scene" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>